---
import '../styles/global.css';
import Navigation from '../components/Navigation.astro';
import Footer from '../components/Footer.astro';

interface Props {
  title?: string;
  description?: string;
  image?: string;
  canonicalURL?: string;
  type?: 'website' | 'article';
}

const { 
  title = "Piano Fitness - Technical Development for Piano Students",
  description = "Piano Fitness complements your piano lessons with focused technical exercises and real-time feedback for effective practice.",
  image = import.meta.env.BASE_URL + "PianoFitness.png",
  canonicalURL = new URL(Astro.url.pathname, Astro.site).href,
  type = "website"
} = Astro.props;

// Ensure absolute URLs for social media images
const socialImageUrl = new URL(image, Astro.site).href;
---

<!doctype html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width" />
    <link rel="canonical" href={canonicalURL}>

    <!-- Primary Meta Tags -->
    <title>{title}</title>
    <meta name="title" content={title}>
    <meta name="description" content={description}>
    <meta name="keywords" content="piano practice, piano technique, piano exercises, MIDI, piano training, music education, interactive piano">
    <meta name="robots" content="index, follow">
    <meta name="language" content="English">
    <meta name="author" content="Piano Fitness">

    <!-- Open Graph / Facebook -->
    <meta property="og:type" content={type}>
    <meta property="og:url" content={canonicalURL}>
    <meta property="og:title" content={title}>
    <meta property="og:description" content={description}>
    <meta property="og:image" content={socialImageUrl}>
    <meta property="og:site_name" content="Piano Fitness">

    <!-- Twitter -->
    <meta property="twitter:card" content="summary_large_image">
    <meta property="twitter:url" content={canonicalURL}>
    <meta property="twitter:title" content={title}>
    <meta property="twitter:description" content={description}>
    <meta property="twitter:image" content={socialImageUrl}>

    <!-- Favicon and App Icons -->
    <link rel="icon" type="image/ico" href={import.meta.env.BASE_URL + "favicon.ico"}>
    <link rel="apple-touch-icon" sizes="57x57" href={import.meta.env.BASE_URL + "icons/apple-icon-57x57.png"}>
    <link rel="apple-touch-icon" sizes="60x60" href={import.meta.env.BASE_URL + "icons/apple-icon-60x60.png"}>
    <link rel="apple-touch-icon" sizes="72x72" href={import.meta.env.BASE_URL + "icons/apple-icon-72x72.png"}>
    <link rel="apple-touch-icon" sizes="76x76" href={import.meta.env.BASE_URL + "icons/apple-icon-76x76.png"}>
    <link rel="apple-touch-icon" sizes="114x114" href={import.meta.env.BASE_URL + "icons/apple-icon-114x114.png"}>
    <link rel="apple-touch-icon" sizes="120x120" href={import.meta.env.BASE_URL + "icons/apple-icon-120x120.png"}>
    <link rel="apple-touch-icon" sizes="144x144" href={import.meta.env.BASE_URL + "icons/apple-icon-144x144.png"}>
    <link rel="apple-touch-icon" sizes="152x152" href={import.meta.env.BASE_URL + "icons/apple-icon-152x152.png"}>
    <link rel="apple-touch-icon" sizes="180x180" href={import.meta.env.BASE_URL + "icons/apple-icon-180x180.png"}>
    <link rel="icon" type="image/png" sizes="192x192"  href={import.meta.env.BASE_URL + "icons/android-icon-192x192.png"}>
    <link rel="icon" type="image/png" sizes="32x32" href={import.meta.env.BASE_URL + "icons/favicon-32x32.png"}>
    <link rel="icon" type="image/png" sizes="96x96" href={import.meta.env.BASE_URL + "icons/favicon-96x96.png"}>
    <link rel="icon" type="image/png" sizes="16x16" href={import.meta.env.BASE_URL + "icons/favicon-16x16.png"}>
    <link rel="manifest" href={import.meta.env.BASE_URL + "manifest.json"}>
    <meta name="msapplication-TileColor" content="#2B6DA3">
    <meta name="msapplication-TileImage" content={import.meta.env.BASE_URL + "icons/ms-icon-144x144.png"}>
    <meta name="theme-color" content="#2B6DA3">
  </head>
  <body>
    <Navigation />
    
    <main>
      <slot />
    </main>
    
    <Footer />
  </body>
</html>

<style>
  html,
  body {
    margin: 0;
    width: 100%;
    height: 100%;
  }
</style>
