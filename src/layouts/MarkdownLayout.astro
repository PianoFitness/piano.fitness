---
// src/layouts/MarkdownLayout.astro
import Layout from './Layout.astro';
import Prose from '../components/Prose.astro';

const { frontmatter } = Astro.props;
---

<Layout title={frontmatter.title}>
  <div class="container mx-auto px-4 py-8 md:py-16 max-w-4xl">
    <div class="mb-8">
      <h1 class="text-3xl md:text-4xl font-bold mb-2">{frontmatter.title}</h1>
      {frontmatter.description && 
        <p class="text-neutral-content/70">{frontmatter.description}</p>
      }
    </div>
    
    <div class="bg-base-100 dark:bg-neutral-900 p-6 md:p-8 rounded-lg shadow-md">
      <Prose>
        <slot />
      </Prose>
    </div>
  </div>
</Layout>
